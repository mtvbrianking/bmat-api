                                "name": "Jane Doe",
                                "email": "jdoe@example.com",
                                "email_verified_at": "2018-10-14 12:42:30",
                                "created_at": "2018-10-14 12:42:31",
                                "updated_at": "2018-10-18 13:53:15",
                                "deleted_at": "2018-10-18 13:53:15"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "examples": {
