                "operationId": "restoreUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                ],
                "x-code-samples": [
                    {
                        "lang": "CURL",
                        "source": "curl -X PUT \\\n 'http:\/\/localhost:8000\/api\/v1\/users\/3dacedb2-b865-4192-87ed-0fc29ffefc26\/restore' \\\n -H 'Accept: application\/json' \\\n -H 'Authorization: Bearer {ACCESS TOKEN}'"
                    }
                ],
                "responses": {
                    "200": {
