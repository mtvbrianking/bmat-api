                                "deleted_at": null
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "examples": {
                            "application/json": {
                                "error": "Unknown user"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "description": "Error message",
                    "type": "string",
                    "example": "Something went wrong."
                }
            }
        },
        "401ErrorResponse": {
            "message": "Unauthenticated."
        },
        "403ErrorResponse": {
            "message": "Insufficient Permission."
        },
        "422ErrorResponse": {
            "errors": {
                "email": [
                    "Wrong email or password."
                ]
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "description": "User ID",
                    "type": "uuid",
                    "example": "0ac99f1b-482c-4af1-be28-ddace07eff20"
                },
                "name": {
                    "description": "User full name",
                    "type": "string",
                    "maxLength": 25,
                    "example": "John Doe"
                },
                "email": {
                    "description": "User email address",
                    "type": "string",
                    "format": "email",
                    "example": "jdoe@example.com"
                },
                "created_at": {
                    "description": "When user account was created",
                    "type": "datetime",
                    "example": "2018-09-30 15:32:06",
                    "x-nullable": true
                },
                "email_verified_at": {
                    "description": "When user account was verified",
                    "type": "datetime",
                    "example": "2018-09-30 15:35:42",
                    "x-nullable": true
                },
                "updated_at": {
                    "description": "When user account was last updated",
                    "type": "datetime",
                    "example": "2018-09-30 15:35:42",
                    "x-nullable": true
                },
                "deleted_at": {
                    "description": "When user account was deleted",
                    "type": "datetime",
                    "x-nullable": true
                }
            }
        }
    }
}
